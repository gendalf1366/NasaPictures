<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="equilateral_image_view_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="bottom_app_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="bottom_sheet_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_header_padding_start</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_header_padding_end</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>